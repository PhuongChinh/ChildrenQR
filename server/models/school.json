{
  "name": "School",
  "plural": "schools",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "mysql": {
      "table": "school"
    }
  },
  "postgresql": {
    "schema": "public",
    "table": "school"
  },
  "properties": {
    "id": {
      "type": "number",
      "id": true,
      "generated": true,
      "description": "The identifier ID of record of the database table, it is required by loopback framework"
    },
    "code": {
      "type": "string",
      "required": true,
      "index": true,
      "length": 32
    },
    "name": {
      "type": "string",
      "required": true,
      "index": true,
      "length": 256
    },
    "description": {
      "type": "string",
      "length": 512
    },
    "iconUrl": {
      "type": "string",
      "length": 256
    },
    "status": {
      "type": "string",
      "description": "ACTIVATED | BLOCKED",
      "length": 32
    },
    "schoolType": {
      "type": "string",
      "length": 32
    },
    "contactName": {
      "type": "string",
      "length": 256
    },
    "contactEmail": {
      "type": "string",
      "length": 256
    },
    "contactPhone": {
      "type": "string",
      "length": 256
    },
    "updatedBy": {
      "type": "string",
      "length": 256
    },
    "updatedTime": {
      "type": "date",
      "defaultFn": "now"
    },
    "createdTime": {
      "type": "date",
      "defaultFn": "now"
    }
  },
  "validations": [],
  "relations": {
    "addresses": {
      "type": "hasMany",
      "model": "SchoolAddress",
      "foreignKey": "schoolId",
      "scope": {
        "include": [
          "country",
          "province",
          "district",
          "ward"
        ]
      }
    },
    "teachers": {
      "type": "hasMany",
      "model": "Teacher",
      "foreignKey": "schoolId",
      "through": "SchoolTeacher",
      "keyThrough": "teacherId"
    },
    "students": {
      "type": "hasMany",
      "model": "Student",
      "foreignKey": "schoolId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}